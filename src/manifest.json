{
    "manifest_version": 2,
    "name": "sample",
    "description": "A sample extension to get the selected text",
    "version": "1.0",
    "browser_action": {
        "default_popup": "html/popup.html"
    },
	
	"options_page": "html/options.html",
	
    "background":{
      "scripts": [ "js/eventPage.js" ],
      "persistent": false
    },

  "permissions": [
    "activeTab",
    "tabs",
    "contextMenus",
    "http://api.cognitive.microsoft.com/bing/v7.0/search"
  ]
}